{% extends 'base.html.twig' %}

{% block title %}Welkom{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Welkom bij Webshop!</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        {% for product in products %}
            <div class="col-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.productomschrijving }}</h5>
                        <p class="card-text">&euro;{{ product.productprijs|number_format(2, ',', '.') }}</p>
                        {% if app.user %}
                        <form action="{{ path('cart_add', { 'product': product.id }) }}">
                            <button type="submit" class="btn btn-primary">In winkelwagen</button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
