{% extends 'base.html.twig' %}

{% block title %}Factuur index{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Facturen</h1>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Factuurdatum</th>
                <th>Vervaldatum</th>
                <th>Inzakeopdracht</th>
                <th>Klantnummer</th>
                <th>Korting</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
        {% for factuur in factuurs %}
            <tr>
                <td>{{ factuur.id }}</td>
                <td>{{ factuur.factuurdatum ? factuur.factuurdatum|date('Y-m-d') : '' }}</td>
                <td>{{ factuur.vervaldatum ? factuur.vervaldatum|date('Y-m-d') : '' }}</td>
                <td>{{ factuur.inzakeopdracht }}</td>
                <td>{{ factuur.klantnummer }}</td>
                <td>{{ factuur.korting }}%</td>
                <td>
                    <a class="btn btn-info" href="{{ path('factuur_show', {'id': factuur.id}) }}">Toon</a>
                    <a class="btn btn-warning" href="{{ path('factuur_edit', {'id': factuur.id}) }}">Bewerk</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('factuur_new') }}">Nieuw factuur</a>
</div>
{% endblock %}
