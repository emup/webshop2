{% extends 'base.html.twig' %}

{% block title %}Factuur{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Factuur</h1>
    </div>
</div>
<div class="container">
    <h2>Gegevens</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ factuur.id }}</td>
            </tr>
            <tr>
                <th>Factuurdatum</th>
                <td>{{ factuur.factuurdatum ? factuur.factuurdatum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Vervaldatum</th>
                <td>{{ factuur.vervaldatum ? factuur.vervaldatum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Inzakeopdracht</th>
                <td>{{ factuur.inzakeopdracht }}</td>
            </tr>
            <tr>
                <th>Korting</th>
                <td>{{ factuur.korting }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Producten</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Productcode</th>
                <th>Aaantal</th>
            </tr>
            {% for regel in factuur.factuurregels %}
            <tr>
                <td>{{ regel.productcode }}</td>
                <td>{{ regel.productaantal }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary my-1" href="{{ path('factuur_index') }}">Terug naar lijst</a>

    <a class="btn btn-warning my-1" href="{{ path('factuur_edit', {'id': factuur.id}) }}">Bewerken</a>

    {{ include('factuur/_delete_form.html.twig') }}
</div>
{% endblock %}
